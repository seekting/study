<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="transparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->

    </style>

    <style name="Media_loading">
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:indeterminateDrawable">@drawable/akbm_media_loading</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>

    <style name="textfield_holo_style">
        <item name="android:background">@drawable/textfield_holo_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#ff858585</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="city_select_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff585858</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">14dip</item>
        <item name="android:paddingBottom">14dip</item>
    </style>

    <style name="city_select_section_item">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fffa8c13</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#fff6f6f6</item>
    </style>

    <style name="K_ActionBarStyle" parent="android:style/Theme.Holo.Light">
<!--     <item name="android:actionBarItemBackground">@drawable/k_actionbar_selector</item> -->
    <item name="android:actionBarStyle">@style/K_ActionBar</item>
		
    </style>

    <style name="K_ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">

        <!-- 返回按钮 -->

<!--     <item name="android:homeAsUpIndicator">@drawable/back</item> -->
    <item name="android:titleTextStyle">@style/K_ActionBar_titleStyle</item>
    </style>

    <style name="K_ActionBar_titleStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>